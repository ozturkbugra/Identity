@model AppRole

<h2>Edit Role</h2>
<hr />
<form method="post">
    <div class="text-center">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input name="Id" type="hidden" value="@Model.Id" />
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>






    <button type="submit" class="btn btn-warning">Güncelle</button>
</form>


<hr />
<table class="table table-hover table-sm table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(ViewBag.Users != null)
        {
            

            foreach (var item in ViewBag.Users)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>

                       
                    </td>
                </tr>
            }
        }
       

    </tbody>
</table>